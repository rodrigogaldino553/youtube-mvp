<div id="<%= dom_id video %>">
  <p>
    <strong>Title:</strong>
    <%= video.title %>
  </p>

  <div>
    <% if video.file.attached? %>
      <video controls="true" <%= "poster='#{url_for video.thumbnail if video.thumbnail.present?}'" %> width="100%" height="300px" preload="metadata" controlslist="nodownload">
        <source src="<%= rails_blob_url(video.file) %>" type="<%= video.file.content_type %>"></source>
      </video>
    <% end %>
  </div>

  <p>
    <strong>Description:</strong>
    <%= video.description %>
  </p>

</div>
